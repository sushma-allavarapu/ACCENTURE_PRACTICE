import java.util.*;
class Main{
    public static void main(String[] args)
    {
         Scanner sc=new Scanner(System.in);
        int k=0;
         String s=sc.nextLine();
         if(s.length()>10)
         {
             k=s.length()-2;
             System.out.println(s.charAt(0)+""+k+s.charAt(s.length()-1));
         }
         else
         {
             System.out.println(s);
         }
    }
}
